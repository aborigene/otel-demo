{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "todo-tree.general.tags": ["TODO", "FIXME", "INSTRUMENT", "CODE BLOCK", "NOTE"],
  "todo-tree.general.tagGroups": {
    "FIXME": ["FIXME", "FIXIT", "FIX"],
    "NOTE": ["NOTE", "FYI"]
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "White",
      "background": "Orange",
      "iconColour": "Orange",
      "icon": "todo"
    },
    "FIXME": {
      "foreground": "White",
      "background": "Tomato",
      "iconColour": "Tomato",
      "icon": "bug"
    },
    "INSTRUMENT": {
      "foreground": "Yellow",
      "background": "SlateBlue",
      "iconColour": "SlateBlue",
      "icon": "telescope",
      "gutterIcon": true,
      "type": "whole-line"
    },
    "CODE BLOCK": {
      "foreground": "White",
      "background": "MediumSeaGreen",
      "iconColour": "MediumSeaGreen",
      "icon": "code",
      "gutterIcon": true,
      "type": "text",
      "hideFromTree": true
    },
    "NOTE": {
      "foreground": "White",
      "background": "DodgerBlue",
      "icon": "info",
      "hideFromTree": true
    }
  }
}
